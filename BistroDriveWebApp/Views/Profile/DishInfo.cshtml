        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ingridient)
        </dd>



    </dl>
</div>
@if (User.Identity.Name != ViewBag.Username)
{
@Html.ActionLink("Buy", "MakeOrder", "order", new { id = Model.Id_Dish }, htmlAttributes: new { @class = "btn btn-success" })
}

@if (User.Identity.Name == ViewBag.Username)
{
<p>
    <div>
        @Html.ActionLink("Edit", "EditDish", new { id = Model.Id_Dish }) |
        @Html.ActionLink("Delete", "DeleteDish", new { id = Model.Id_Dish }, new { onclick = "return confirm('Are you sure you wish to delete this dish?');" })
    </div>
</p>
}
