    <h4>@Html.DisplayFor(model => model.Name)</h4>
    @Html.ActionLink("Back to List", "Dish", new { id = ViewBag.Username })
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
